PROJECT( distBlocks2 )

cmake_minimum_required( VERSION 2.6 )

FIND_LIBRARY( MYLIBS  NAMES libviaio.a  PATHS /usr/lib)

MESSAGE( STATUS "Libraries: ${MYLIBS}" )

FIND_PACKAGE( OpenMP )
SET( CMAKE_C_FLAGS
    "${CMAKE_C_FLAGS} ${OpenMP_C_FLAGS}"
)
SET( CMAKE_CXX_FLAGS
    "${CMAKE_CXX_FLAGS} ${OpenMP_CXX_FLAGS}"
)

INCLUDE_DIRECTORIES(
    /usr/include
)

LINK_LIBRARIES(
    ${MYLIBS}
)

SET( SRCS
    main.cpp

    # functions
    output.cpp
    get_names.cpp
    do_Vista.cpp
    tract_dist.cpp
    do_dist_blocks.cpp

)

ADD_EXECUTABLE( distBlocks2
    ${SRCS}
)

